@model BrandCi.Core.ViewModels.App.Blog.Overview.BlogOverviewViewModel
@{
    ViewBag.Title = "Blog Overview";
}
@section navigation {
    @Html.Partial("~/Areas/App/Views/Shared/_Layout/Partial/_LeftNavigation.cshtml")
}
@section styles {
    @Styles.Render("~/Content/Plugins/Datatables")
}


<div class="row">
    <div class="col-12">
        <div class="card-box table-responsive">
            <h4 class="m-t-0 header-title">@ViewBag.Title</h4>
            <a href="@Url.Action("Add", "BlogEntry", new { area = "App" })" class="btn btn-primary btn-custom">
                <i class="fas fa-plus"></i>
                Add Blog Entry
            </a>
            <p class="text-muted font-14 m-b-30"></p>

            <table id="blogOverview-datatable" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>UrlKey</th>
                        <th>PublishDate</th>
                        <th></th>
                    </tr>
                </thead>


                <tbody>

                @foreach(var blog in Model) {

                    <tr>
                        <td>@blog.Title</td>
                        <td>@blog.UrlKey</td>
                        <td>@blog.PublishDate.ToString("dd.MM.yyyy")</td>
                        <td>
                            <a href="@Url.Action("Edit", "BlogEntry", new {id = blog.Id})">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>

                }
                

                </tbody>
            </table>
        </div>
    </div>
</div> <!-- end row -->






@section scripts{
    @Scripts.Render("~/bundles/Plugins/Datatables")

    <script type="text/javascript">

        $('#blogOverview-datatable').DataTable();

    </script>
}