@using BrandBook.Resources

@{
    ViewBag.Title = "Index";
}

@section navigation {
    @Html.Partial("~/Areas/App/Views/Shared/_Layout/Partial/_LeftNavigation.cshtml")
}


<div class="row">
    <div class="col-sm-12 col-xs-12">
        <div class="card m-b-20 card-body">
            <h4 class="card-title">@Translations.app_settings_overview_title</h4>
            <p class="card-text">
                @Translations.app_settings_overview_description
            </p>
        </div>
    </div>
</div>






<div class="row">
    <div class="col-lg-4 col-md-6">
        <div class="widget-bg-color-icon card-box">
            <div class="bg-icon bg-icon-primary pull-left">
                <i class="fab fa-galactic-republic text-primary"></i>
            </div>
            <div class="text-right">
                <h3 class="text-dark"><b class="counter">@Translations.app_settings_system_title</b></h3>
                <p class="text-muted mb-0">@Translations.app_settings_system_description</p>
            </div>
            <a href="@Url.Action("SystemSettings", "System", new { area = "App" })" class="btn btn-primary btn-custom mt-4">
                @Translations.app_settings_overview_open_button_title&nbsp;&nbsp;<i class="fas fa-chevron-right"></i>
            </a>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6">
        <div class="widget-bg-color-icon card-box">
            <div class="bg-icon bg-icon-success pull-left">
                <i class="fas fa-user text-primary"></i>
            </div>
            <div class="text-right">
                <h3 class="text-dark"><b class="counter">@Translations.app_settings_user_title</b></h3>
                <p class="text-muted mb-0">@Translations.app_settings_user_description</p>
            </div>
            <a href="@Url.Action("UserSettings", "System", new { area = "App" })" class="btn btn-success btn-custom mt-4">
                @Translations.app_settings_overview_open_button_title&nbsp;&nbsp;<i class="fas fa-chevron-right"></i>
            </a>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6">
        <div class="widget-bg-color-icon card-box">
            <div class="bg-icon bg-icon-danger pull-left">
                <i class="fas fa-images  text-primary"></i>
            </div>
            <div class="text-right">
                <h3 class="text-dark"><b class="counter">@Translations.app_settings_media_title</b></h3>
                <p class="text-muted mb-0">@Translations.app_settings_media_description</p>
            </div>
            <a href="@Url.Action("MediaSettings", "System", new { area = "App" })" class="btn btn-danger btn-custom mt-4">
                @Translations.app_settings_overview_open_button_title&nbsp;&nbsp;<i class="fas fa-chevron-right"></i>
            </a>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6">
        <div class="widget-bg-color-icon card-box">
            <div class="bg-icon bg-icon-warning pull-left">
                <i class="fas fa-swatchbook  text-primary"></i>
            </div>
            <div class="text-right">
                <h3 class="text-dark"><b class="counter">@Translations.app_settings_brand_title</b></h3>
                <p class="text-muted mb-0">@Translations.app_settings_brand_description</p>
            </div>
            <a href="@Url.Action("BrandSettings", "System", new { area = "App" })" class="btn btn-warning btn-custom mt-4">
                @Translations.app_settings_overview_open_button_title&nbsp;&nbsp;<i class="fas fa-chevron-right"></i>
            </a>
            <div class="clearfix"></div>
        </div>
    </div>
</div>


@Html.Partial("~/Areas/App/Views/Shared/_Partial/_VersionInfo.cshtml")