@model BrandCi.Core.ViewModels.App.UserManagement.RoleOverviewViewModel
@{
    ViewBag.Title = "RoleOverview";
}
@section navigation {
    @Html.Partial("~/Areas/App/Views/Shared/_Layout/Partial/_LeftNavigation.cshtml")
}
@section styles {
    @Styles.Render("~/Content/Plugins/Datatables")
}


<div class="row">
    <div class="col-12">
        <div class="card-box table-responsive">
            <h4 class="m-t-0 header-title">@ViewBag.Title</h4>
            <p class="text-muted font-14 m-b-30"></p>

            <table id="appRoleOverview-datatable" class="table table-bordered dt-responsive">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                    </tr>
                </thead>


                <tbody>
                @foreach (var role in Model.Roles)
                {
                    <tr>
                        <td>
                            @role.Id
                        </td>
                        <td>
                            <a href="#">
                                @role.Name
                            </a>
                        </td>
                    </tr>
                }

                

                </tbody>
            </table>
        </div>
    </div>
</div> <!-- end row -->






@section scripts{
    @Scripts.Render("~/bundles/Plugins/Datatables")

    <script type="text/javascript">

        $('#appRoleOverview-datatable').DataTable({
            select: {
                style: 'multi'
            },
            language: {
                url: '//cdn.datatables.net/plug-ins/1.10.19/i18n/German.json'
            }
        });

    </script>
}