@model BrandBook.Web.ViewModels.Authorization.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@section ColorStyle
{
    @Styles.Render("~/Content/Css/Styling/02")
}

<h2>Register</h2>

<div class="row">
    <div class="col-md-12">

        @using (Html.BeginForm("Register", "Authorization", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @type = "Email", @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Email) })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Username)
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Username) })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Password) })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword)
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.ConfirmPassword) })
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    Registrieren
                </button>
            </div>
        }

    </div>
</div>