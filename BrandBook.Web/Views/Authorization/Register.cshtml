
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<div class="row">
    <div class="col-md-12">

        @using (Html.BeginForm("Register", "Authorization", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="email">
                    E-Mail
                </label>
                <div class="col-md-10">
                    <input type="email" id="email" class="form-control" placeholder="E-Mail" />
                </div>
            </div>

            <div class="form-group">
                <label for="username">
                    Nutzername
                </label>
                <div class="col-md-10">
                    <input type="text" id="username" class="form-control" placeholder="Nutzername" />
                </div>
            </div>

            <div class="form-group">
                <label for="password">
                    Passwort
                </label>
                <div class="col-md-10">
                    <input type="password" id="password" class="form-control" autocomplete="off" placeholder="Passwort" />
                </div>
            </div>
            
            <div class="form-group">
                <label for="rep_password">
                    Passwort wiederholen
                </label>
                <div class="col-md-10">
                    <input type="password" id="rep_password" class="form-control" autocomplete="off" placeholder="Passwort wiederholen" />
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    Registrieren
                </button>
            </div>
        }

    </div>
</div>