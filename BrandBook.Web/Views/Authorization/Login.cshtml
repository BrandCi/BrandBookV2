@{
    ViewBag.Title = "Login";
}
@section ColorStyle
{
    @Styles.Render("~/Content/Css/Styling/02")
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-12">

        @using (Html.BeginForm("Login", "Authorization", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="username">
                    Nutzername
                </label>
                <div class="col-md-10">
                    <input type="text" id="username" class="form-control" placeholder="Nutzername" />
                </div>
            </div>

            <div class="form-group">
                <label for="password">
                    Passwort
                </label>
                <div class="col-md-10">
                    <input type="password" id="password" class="form-control" autocomplete="off" placeholder="Passwort" />
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    Anmelden
                </button>
            </div>
        }

    </div>
</div>
