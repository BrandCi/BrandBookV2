@model BrandBook.Web.Framework.ViewModels.Frontend.Blog.BlogOverviewViewModel
@using BrandBook.Web.Framework.HtmlHelpers
@{
    ViewBag.Title = "Blog";
}

<section class="breadcrumb_area">
    @CustomHelper.Image("FrontendData/6de4d537-9a97-4b39-bda4-7b491a3d2ce6", "png", "breadcrumb_shap")
    <div class="container">
        <div class="breadcrumb_content text-center">
            <h1 class="f_p f_700 f_size_50 w_color l_height50 mb_20">
                Blog
            </h1>
            <p class="f_400 w_color f_size_16 l_height26">

            </p>
        </div>
    </div>
</section>



<section class="blog_area sec_pad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <div class="row">


                    @foreach (var blogEntry in Model.BlogEntries)
                    {
                        <div class="col-lg-4 col-sm-4">
                            <div class="blog_grid_item mb-30">
                                <a href="@Url.Action(blogEntry.UrlKey, "Blog")">
                                    <div class="blog_img">
                                       
                                    </div>
                                </a>
                                    <div class="blog_content">
                                        <div class="entry_post_info">
                                            By: @blogEntry.Author / @blogEntry.CreationDateTime.ToString("dd.MM.yyyy")
                                        </div>
                                        <a href="@Url.Action(blogEntry.UrlKey, "Blog")">
                                            <h5 class="f_p f_size_20 f_500 t_color mb_20">
                                                @blogEntry.Title
                                            </h5>
                                        </a>
                                        <p class="f_400 mb-0">
                                            @blogEntry.SubTitle
                                        </p>
                                    </div>
                            </div>
                        </div>
                    }
                    
                    
                    @if (Model.BlogEntries.Count == 0)
                    {
                        <div class="col-lg-12 col-sm-12">
                            <div class="blog_grid_item mb-30">
                                
                                <div class="blog_content">
                                    <h5 class="f_p f_size_20 f_500 t_color mb_20">
                                        @Translations.frontend_blog_noavailableblogs_title
                                    </h5>
                                    <p class="f_400 mb-0">
                                        @Translations.frontend_blog_noavailableblogs_description
                                    </p>
                                </div>

                            </div>
                        </div>
                    }


                </div>

            </div>

        </div>
    </div>
</section>