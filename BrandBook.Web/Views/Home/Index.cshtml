@using BrandBook.Web.Framework.HtmlHelpers
@{
    ViewBag.Title = "Startseite";
}
@section pageScriptBundle {
    @Scripts.Render("~/bundles/Frontend/Page/Homepage")
}

<section class="seo_home_area">
    <div class="home_bubble">
        <div class="bubble b_one"></div>
        <div class="bubble b_two"></div>
        <div class="bubble b_three"></div>
        <div class="bubble b_four"></div>
        <div class="bubble b_five"></div>
        <div class="bubble b_six"></div>
    </div>
    <div class="banner_top">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center seo_banner_content">
                    <h2 class="wow fadeInUp" data-wow-delay="0.3s">
                        @Translations.frontend_home_index_topsection_title_l1<br />
                        @Translations.frontend_home_index_topsection_title_l2
                    </h2>
                    <p class="wow fadeInUp" data-wow-delay="0.5s">
                        @Translations.frontend_home_index_topsection_subtitle
                    </p>

                    <a href="@Url.Action("Overview", "Product", new {area = ""})" class="seo_btn seo_btn_one btn_hover">
                        @Translations.frontend_home_index_topsection_discover_button_title
                    </a>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("Index", "Register", new {area = "Auth"})" class="seo_btn seo_btn_two btn_hover">
                            @Translations.frontend_home_index_topsection_test_button_title
                        </a>
                    }

                </div>
            </div>
            <div class="saas_home_img wow fadeInUp" data-wow-delay="0.8s">
                @CustomHelper.Image("FrontendData/046415b9-2de1-4d91-a239-e55f6d166da7", "svg", "", "", "width=\"50%\"")
            </div>
        </div>
    </div>
</section>
<section class="seo_service_area sec_pad">
    <div class="container">
        <div class="seo_sec_title text-center mb_70 wow fadeInUp" data-wow-delay="0.3s">
            <h2>
                @Translations.frontend_home_index_features_title_l1<br/>
                @Translations.frontend_home_index_features_title_l2
            </h2>
            <p></p>
        </div>
        <div class="row seo_service_info">
            <div class="col-lg-4 col-md-6">
                <div class="seo_service_item">
                    @CustomHelper.Image("FrontendData/e06b7899-c2d9-45c8-ac10-86007e4dcafb", "svg", "", "", "width=\"100%\"")
                    <a href="@Url.Action("Overview", "Product", new {area = ""})">
                        <h4>@Translations.frontend_home_index_features_feature_01_title</h4>
                    </a>
                    <p>@Translations.frontend_home_index_features_feature_01_description</p>
                    <a href="@Url.Action("Overview", "Product", new {area = ""})"><i class="arrow_right"></i></a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="seo_service_item">
                    @CustomHelper.Image("FrontendData/b46e4b1c-42f8-4e27-9e94-41162ec1e32b", "svg", "", "", "width=\"100%\"")
                    <a href="@Url.Action("Overview", "Product", new {area = ""})">
                        <h4>@Translations.frontend_home_index_features_feature_02_title</h4>
                    </a>
                    <p>@Translations.frontend_home_index_features_feature_02_description</p>
                    <a href="@Url.Action("Overview", "Product", new {area = ""})"><i class="arrow_right"></i></a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="seo_service_item">
                    @CustomHelper.Image("FrontendData/7a5f43f7-a053-4ea8-afe2-f0598394f203", "svg", "", "", "width=\"100%\"")
                    <a href="@Url.Action("Overview", "Product", new {area = ""})">
                        <h4>@Translations.frontend_home_index_features_feature_03_title</h4>
                    </a>
                    <p>@Translations.frontend_home_index_features_feature_03_description</p>
                    <a href="@Url.Action("Overview", "Product", new {area = ""})"><i class="arrow_right"></i></a>
                </div>
            </div>
            <div class="col-lg-12 text-center mt_40">
                <a href="@Url.Action("Overview", "Product", new {area = ""})" class="seo_btn seo_btn_one btn_hover">All Features</a>
            </div>
        </div>
    </div>
</section>





<section class="seo_fact_area sec_pad">
    <div class="home_bubble">
        <div class="bubble b_one"></div>
        <div class="bubble b_three"></div>
        <div class="bubble b_four"></div>
        <div class="bubble b_six"></div>
    </div>
    <div class="container">
       
        <div class="seo_fact_info">
            <div class="seo_fact_item">
                <div class="text">
                    <div class="counter one">12</div>
                    <p>Happy Users</p>
                </div>
            </div>
            <div class="seo_fact_item">
                <div class="text">
                    <div class="counter two">17</div>
                    <p>Brandings created</p>
                </div>
            </div>
            <div class="seo_fact_item">
                <div class="text">
                    <div class="counter three">8</div>
                    <p>Brandings optimized</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="seo_call_to_action_area sec_pad">
    <div class="container">
        <div class="seo_call_action_text">
            <h2>Ready to get started?<br> lt's fast and very easy!</h2>
            <a href="@Url.Action("Index", "Pricing", new {area=""})" class="about_btn">Select your plan</a>
        </div>
    </div>
</section>