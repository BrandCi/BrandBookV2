@using BrandBook.Web.Framework.HtmlHelpers
<footer class="footer_area footer_three">
    <div class="footer_top">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="f_widget company_widget">
                        <a href="@Url.Action("Index", "Home", new {area = ""})" class="f-logo">
                            @CustomHelper.Image("06b354ec-78ad-4bac-bafa-5afcddb75de5", "png", "d-inline-block align-top", "", "srcset=\"img/logo-3-2x.png 2x\" width=\"75\" height=\"75\"")
                        </a>
                        <p class="f_400 f_p f_size_15 mb-0 l_height28 mt_30">
                            Deine digitale Marke.
                            Dein Erfolg.
                        </p>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="f_widget about-widget pl-30">
                        <h3 class="f-title f_600 f_size_18 mb_40">
                            @Translations.frontend_footer_product_title
                        </h3>
                        <ul class="list-unstyled f_list">
                            <li>
                                <a href="@Url.Action("Overview", "Product", new {area = ""})">
                                    @Translations.frontend_footer_product_solutions
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Pricing", new {area = ""})">
                                    @Translations.frontend_footer_product_pricing
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="f_widget about-widget">
                        <h3 class="f-title f_600 f_size_18 mb_40">
                            @Translations.frontend_footer_support_title
                        </h3>
                        <ul class="list-unstyled f_list">
                            <li>
                                <a href="@Url.Action("Contact", "Support", new {area = ""})">
                                    @Translations.frontend_footer_support_contact
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <div class="col-lg-3">
                    <div class="f_widget about-widget">
                        <h3 class="f-title f_600 f_size_18 mb_40">
                            Language Selection
                        </h3>
                        <ul class="list-unstyled f_list">
                            <li class="dropdown submenu nav-item">
                                <a title="Deutsch (Deutschland)" class="dropdown-toggle nav-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" href="#">
                                    Deutsch (Deutschland)
                                </a>
                                <ul role="menu" class=" dropdown-menu">

                                    <li class="nav-item">
                                        <a title="Deutsch (Deutschland)" class="nav-link" href="#">
                                            Deutsch (Deutschland)
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a title="English (United Stated)" class="nav-link" href="#">
                                            English (United Stated)
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a title="Arabic (Saudi Arabia)" class="nav-link" href="#">
                                            Arabic (Saudi Arabia)
                                        </a>
                                    </li>

                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <div class="footer_bottom">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">

                    <p class="mb-0 f_400">
                        <a href="@Url.Action("Index", "Home")">
                            @Translations.frontend_footer_copyright
                        </a>
                        © 2019 @Translations.frontend_footer_allrightsreserved
                    </p>

                </div>
                <div class="col-lg-6">
                    <ul class="f_menu text-right list-unstyled">
                        <li>
                            <a href="@Url.Action("Imprint", "Legal", new {area = ""})">
                                @Translations.frontend_footer_legal_imprint
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("PrivacyPolicy", "Legal", new {area = ""})">
                                @Translations.frontend_footer_legal_privacypolicy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>