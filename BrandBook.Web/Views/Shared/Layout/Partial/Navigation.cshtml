@using Microsoft.AspNet.Identity
<nav class="navbar navbar-expand-lg fixed-top navbar-light" style="background-color: #ffffff;">
    <a class="navbar-brand" href="@Url.Action("Index","Home")">
        <img src="~/Content/Images/App/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
        BrandCi
    </a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">

            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index","Home")">
                    Startseite
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Funktionen
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="#">Markenverwaltung</a>
                    <a class="dropdown-item" href="#">Markenverbesserung (KI)</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Geplante Funktionen</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Pricing")">
                    Preise
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    Kontakt
                </a>
            </li>

        </ul>

        <span class="navbar-text">
            @if (User.Identity.IsAuthenticated)
            {
                <a class="btn btn-success nav-button" href="#">Zur App</a>

                if (User.IsInRole("Administrator")) {
                    <a class="btn btn-dark nav-button" href="#">Verwaltung</a>
                }

                using (Html.BeginForm("LogOut", "Authorization", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()

                    <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-danger nav-button">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                }
             
            }
            else
            {
                <a class="btn btn-outline-dark" href="@Url.Action("Login", "Authorization")">Anmelden</a>
                <a class="btn btn-success nav-button" href="@Url.Action("Register", "Authorization")">Registrieren</a>
            }
        </span>

    </div>

</nav>