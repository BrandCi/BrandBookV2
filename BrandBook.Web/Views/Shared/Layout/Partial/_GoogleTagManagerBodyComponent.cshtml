@using System.Configuration
@{
    var googleTagManagerEnabled = ConfigurationManager.AppSettings["GoogleTagManagerEnabled"];
    var googleTagManagerKey = ConfigurationManager.AppSettings["GoogleTagManagerKey"];

    bool isGoogleTagManagerEnabled = !string.IsNullOrEmpty(googleTagManagerEnabled) 
                                     && googleTagManagerEnabled != "false" 
                                     && !string.IsNullOrEmpty(googleTagManagerKey);
}


@if (isGoogleTagManagerEnabled)
{
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=@googleTagManagerKey"
                      height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
}