@using BrandBook.Web.Framework.Helpers
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="keywords" content="Brand Management, BrandBook">
        <meta name="author" content="Philipp C. Moser">
        <meta name="description" content="Brand Book V2">

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>@ViewBag.Title - @ViewBag.MetaAppTitle</title>

        <link href="~/Content/dist/auth.bundle.css" rel="stylesheet" />

        @RenderSection("header", required: false)
        
        <link rel="icon" type="image/png" sizes="100x100" href="@CustomHelper.GetImagePath("favicon", imageType: "ico")">
        <link rel="apple-touch-icon" href="@CustomHelper.GetImagePath("apple-touch-icon", imageType: "png")">

        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

    </head>
    <body>
        <div class="form-body without-side">
            <div class="row">
                @RenderBody()
            </div>
        </div>


        <script src="~/Content/dist/auth.bundle.js"></script>

        @Scripts.Render("~/bundles/packages/auth/scripts")
        @RenderSection("scripts", required: false)

    </body>
</html>