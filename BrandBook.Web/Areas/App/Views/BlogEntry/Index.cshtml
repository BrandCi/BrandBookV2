@model BrandBook.Web.Framework.ViewModels.App.Blog.Overview.BlogOverviewViewModel
@{
    ViewBag.Title = "Blog Overview";
}
@section navigation {
    @Html.Partial("~/Areas/App/Views/Shared/_Layout/Partial/_LeftNavigation.cshtml")
}
@section styles {
    @Styles.Render("~/Content/Plugins/Datatables")
}


<div class="row">
    <div class="col-12">
        <div class="card-box table-responsive">
            <h4 class="m-t-0 header-title">@ViewBag.Title</h4>
            <p class="text-muted font-14 m-b-30"></p>

            <table id="blogOverview-datatable" class="table table-bordered dt-responsive">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>UrlKey</th>
                        <th>Published</th>
                        <th>CreationDate</th>
                    </tr>
                </thead>


                <tbody>

                @foreach(var blog in Model) {

                    <tr>

                        <td>@blog.Title</td>
                        <td>@blog.UrlKey</td>
                        <td>@blog.IsPublished</td>
                        <td>@blog.CreationDate</td>

                    </tr>

                }
                

                </tbody>
            </table>
        </div>
    </div>
</div> <!-- end row -->






@section scripts{
    @Scripts.Render("~/bundles/Plugins/Datatables")

    <script type="text/javascript">

        $('#blogOverview-datatable').DataTable();

    </script>
}