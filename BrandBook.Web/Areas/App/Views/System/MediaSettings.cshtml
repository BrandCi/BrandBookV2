@model BrandBook.Core.ViewModels.App.Settings.MediaSettingsViewModel
@using BrandBook.Resources

@{
    ViewBag.Title = Translations.app_settings_media_title;
}

@section navigation {
    @Html.Partial("~/Areas/App/Views/Shared/_Layout/Partial/_LeftNavigation.cshtml")
}


<div class="row">
    <div class="col-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title">
                @Translations.app_settings_media_title
            </h4>
            <p class="text-muted m-b-30 font-14">
                @Translations.app_settings_media_description
            </p>

            <div class="row">
                <div class="col-12">
                    <div class="p-20">
                        <form class="form-horizontal" role="form">

                            <div class="form-group row">
                                <label class="col-2 col-form-label">Mediaserver</label>
                                <div class="col-10">
                                    <input type="text" class="form-control" value="@Model.Server" disabled="disabled">
                                    <span class="help-block">
                                        <small>
                                            The media-content will be provided from this Media-Server.
                                        </small>
                                    </span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-2 col-form-label">Mediaserver</label>
                                <div class="col-10">
                                    <input type="text" class="form-control" value="@Model.Key" disabled="disabled">
                                    <span class="help-block">
                                        <small>
                                            This key defines the content section.
                                        </small>
                                    </span>
                                </div>
                            </div>


                            <div class="form-group row mt-5 mb-0">
                                <a href="@Url.Action("Settings", "System", new {area = "App"})" class="btn btn-danger btn-custom mr-2">
                                    <i class="fas fa-arrow-left"></i>
                                    &nbsp;
                                    @Translations.app_settings_back_button_title
                                </a>
                                
                            </div>



                        </form>
                    </div>
                </div>

            </div>
            <!-- end row -->

        </div> <!-- end card-box -->
    </div><!-- end col -->
</div>