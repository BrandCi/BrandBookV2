
@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/App/Views/Shared/Layout/_Layout.cshtml";
}



<div class="row">
    <div class="col-xl-3 col-lg-4">
        <div class="text-center card-box">
            <div class="member-card">
                <div class="thumb-xl member-thumb m-b-10 center-block">
                    <img src="https://content.philipp-moser.de/wlo0t5byw6/UserData/94c87e0c-4c8a-4398-ab25-37a6333de0e0.jpg" class="rounded-circle img-thumbnail" alt="profile-image">
                </div>

                <div class="">
                    <h5 class="m-b-5">Philipp C. Moser</h5>
                    <p class="text-muted">Software Entwickler</p>
                </div>

            </div>

        </div> <!-- end card-box -->
    </div> <!-- end col -->

    <div class="col-lg-8 col-xl-9">
        <div class="card m-b-20 card-body">
            <h4 class="card-title">Ändern Sie Ihre Daten</h4>
            <p class="card-text">
                <form role="form">
                    <div class="form-group">
                        <label for="Username">Nutzername</label>
                        <input type="text" value="pmoser" id="Username" class="form-control" disabled="disabled">
                    </div>
                    <div class="form-group">
                        <label for="Firstname">Vorname</label>
                        <input type="text" value="Philipp" id="Firstname" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="Lastname">Nachname</label>
                        <input type="text" value="Moser" id="Lastname" class="form-control">
                    </div>
                    <button class="btn btn-primary waves-effect waves-light w-md" type="submit">Speichern</button>
                </form>
            </p>
        </div>

        <div class="card m-b-20 card-body">
            <p class="card-text">
                <button class="btn btn-primary waves-effect waves-light w-md" type="submit">Passwort ändern</button>
            </p>
        </div>
    </div>


</div>