@using BrandBook.Web.Framework.HtmlHelpers
@model BrandBook.Web.Framework.ViewModels.App.Brand.BrandsOverviewViewModel
@{
    ViewBag.Title = "Markenübersicht";
}
@section navigation {
    @Html.Partial("~/Areas/App/Views/Shared/_Layout/Partial/_LeftNavigation.cshtml")
}

@section styles
{
    @Styles.Render("~/Content/Plugins/Modals")
}

<div class="row mb-3">
    <div class="col-md-4">
        <a href="@Url.Action("Add","Brands", new { area = "App"})" class="btn btn-primary btn-custom waves-effect w-md waves-light m-b-5">
            <i class="fas fa-plus"></i><span class="d-none d-lg-block d-sm-none">&nbsp;Add new Brand</span>
        </a>
    </div>
</div>

<div class="row">
    @AppCustomHelper.BrandOverviewItem(Model)
</div>

@section scripts {
    @Scripts.Render("~/bundles/Plugins/Modals")
}