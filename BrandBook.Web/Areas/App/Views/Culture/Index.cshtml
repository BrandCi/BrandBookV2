@using BrandBook.Resources

@{
    ViewBag.Title = "Sprachauswahl";
}

<div class="row">
    <div class="col-sm-12 col-xs-12">
        <div class="card m-b-20 card-body">
            <h4 class="card-title">Sprachauswahl</h4>
            <p class="card-text">
                Wählen Sie Ihre bevorzugte Sprache aus.
            </p>
        </div>
    </div>
</div>






<div class="row">
    <div class="col-lg-4 col-md-6">
        <div class="widget-bg-color-icon card-box">
            <div class="bg-icon bg-icon-primary pull-left">
                <span class="flag-icon flag-icon-de"></span>
            </div>
            <div class="text-right">
                <h3 class="text-dark mt-3"><b class="counter">Deutsch (Deutschland)</b></h3>
            </div>
            <a href="#" class="btn btn-primary btn-custom mt-4">
                Auswählen&nbsp;&nbsp;<i class="fas fa-globe"></i>
            </a>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6">
        <div class="widget-bg-color-icon card-box">
            <div class="bg-icon bg-icon-primary pull-left">
                <span class="flag-icon flag-icon-us"></span>
            </div>
            <div class="text-right">
                <h3 class="text-dark mt-3"><b class="counter">Englisch (United States)</b></h3>
            </div>
            <a href="#" class="btn btn-primary btn-custom mt-4">
                Auswählen&nbsp;&nbsp;<i class="fas fa-globe"></i>
            </a>
            <div class="clearfix"></div>
        </div>
    </div>
</div>