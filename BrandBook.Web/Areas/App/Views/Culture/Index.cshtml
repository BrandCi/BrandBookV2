@using BrandBook.Resources

@{
    ViewBag.Title = "Sprachauswahl";
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}


@helper selected(string code, string culture)
{
    if (code == culture)
    {
        @:@Translations.app_culturesetting_value_active
    }
    else
    {
        @:&nbsp;
    }
}


<div class="row">
    <div class="col-sm-12 col-xs-12">
        <div class="card m-b-20 card-body">
            <h4 class="card-title">@Translations.app_culturesetting_title</h4>
            <p class="card-text">
                @Translations.app_culturesetting_description
            </p>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-4 col-md-6">
        <div class="widget-bg-color-icon card-box">
            <p class="card-text" style="text-align: right">
                <small class="text-muted">@selected("de-de", culture)</small>
            </p>
            <div class="bg-icon bg-icon-primary pull-left">
                <span class="flag-icon flag-icon-de" style="font-size: 1.5rem; padding-top: 50%;"></span>
            </div>
            <div class="text-right">
                <h3 class="text-dark mt-3"><b class="counter">@Translations.system_culture_de_de_full</b></h3>
            </div>
            <a href="@Url.Action("SetCulture", "Culture", new {area = "App", culture = "de-de"})" class="btn btn-primary btn-custom mt-4">
                @Translations.app_culturesetting_save_button_title&nbsp;&nbsp;<i class="fas fa-globe"></i>
            </a>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6">
        <div class="widget-bg-color-icon card-box">
            <p class="card-text" style="text-align: right">
                <small class="text-muted">@selected("en-us", culture)</small>
            </p>
            <div class="bg-icon bg-icon-primary pull-left">
                <span class="flag-icon flag-icon-us" style="font-size: 1.5rem; padding-top: 50%;"></span>
            </div>
            <div class="text-right">
                <h3 class="text-dark mt-3"><b class="counter">@Translations.system_culture_en_us_full</b></h3>
            </div>
            <a href="@Url.Action("SetCulture", "Culture", new {area = "App", culture = "en-us"})" class="btn btn-primary btn-custom mt-4">
                @Translations.app_culturesetting_save_button_title&nbsp;&nbsp;<i class="fas fa-globe"></i>
            </a>
            <div class="clearfix"></div>
        </div>
    </div>
</div>




<div class="row">
    <div class="col-sm-12 col-xs-12">
        <div class="card m-b-20 card-body">
            <h4 class="card-title">Export Translations</h4>
            <p class="card-text">
                
                @using (Html.BeginForm("ExportTranslationsByCulture", "Culture", FormMethod.Post, new {@class = "form-validation", role = "form"}))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group row">
                        <div class="col-6">
                            <select class="form-control" name="exportCulture">
                                <option value="de-de">@Translations.system_culture_de_de_full [@Translations.system_culture_de_de]</option>
                                <option value="en-us">@Translations.system_culture_en_us_full [@Translations.system_culture_en_us]</option>
                            </select>
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-custom">Export&nbsp;&nbsp;<i class="fas fa-download"></i></button>
                        </div>
                    </div>
                }

                
                    
                

            </p>
        </div>
    </div>
</div>